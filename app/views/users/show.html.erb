
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
  <div class="col-md-8">
    
    <%= render 'follow_form' if logged_in? %>
    
    <% if @user.microposts.any? %>
      <h3>Microposts (<%= @user.microposts.count %>)</h3>
      <ol class="microposts">
        <%= render @microposts %>
      </ol>
    <% end %>
  </div>
</div>

<h1>
    <%= gravatar_for @user %>
    </br>
    </br>
    
    
    <div class="panel panel-primary">
        <div class="panel-heading">ユーザー名</div>
        <div class="panel-body"><%= @user.name %></div>
    </div>
    </br>
    <div class="panel panel-primary">
        <div class="panel-heading">年齢</div>
        <div class="panel-body"><%= @user.age %></div>
    </div>
    </br>
    <div class="panel panel-primary">
        <div class="panel-heading">プロフィール</div>
        <div class="panel-body"><%= @user.profile %></div>
    </div>
    </br>
    <div class="panel panel-primary">
        <div class="panel-heading">地域</div>
        <div class="panel-body"><%= @user.area %></div>
    </div>
    </br>
    
</h1>