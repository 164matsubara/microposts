<h1>Profile edit</h1>
<div class="row">
    <div class="col-md-6 col-offset-3">
        
        <%= form_for(@user) do |f| %>
        
        
        <%= f.label :name %>
        <%= f.text_field :name, class: 'form-control' %>
        
        <%= f.label :age %>
        <%= f.text_field :age, class: 'form-control' %>
        
        <%= f.label :profile %>
        <%= f.text_area :profile, class: 'form-control' %>
        
        <%= f.label :area %>
        <%= f.text_field :area, class: 'form-control' %>
        
        <%= f.submit "プロフィールを作成", class: "btn btn-large btn-primary" %>
        
        <% end %>
        
        
    </div>
</div>